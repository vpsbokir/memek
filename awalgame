task.wait(30)
game:GetService("ReplicatedStorage").Remotes.Misc.LimitedExclusivePack:FireServer()

-- Set up arguments for OpenPresent action
local args = {
    [1] = "ShadowOfAfton",
    [2] = 1
}

-- Fire OpenPresent action
game:GetService("ReplicatedStorage").Remotes.Misc.OpenPresent:FireServer(unpack(args))
task.wait(3)
local player = game.Players.LocalPlayer
local memek = player.PlayerGui.Inventory.InventoryFrame.HolderFrame.Units["Shadow of Afton"].TowerID.Value

local args = {
    [1] = memek  -- Pass the value of `memek` instead of the string "memek"
}

game:GetService("ReplicatedStorage").Remotes.Towers.Equip:FireServer(unpack(args))
